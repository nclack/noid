@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix noid: <https://github.com/nclack/noid/schemas/transforms/> .

<https://github.com/nclack/noid/schemas/transforms/vocabulary.ttl> a owl:Ontology ;
    dc:title "NOID Transform Vocabulary" ;
    dc:description "Minimal vocabulary for coordinate transformations and their parameterizations" ;
    dc:creator "NOID Project" ;
    owl:versionInfo "0.1.0" .

# Base class

noid:Transform a owl:Class ;
    rdfs:label "Transform" ;
    rdfs:comment "Base class for coordinate transformations" ;
    rdfs:subClassOf owl:Thing .

# Transform types

noid:identity a owl:Class ;
    rdfs:label "Identity Transform" ;
    rdfs:comment "Maps coordinates without modification" ;
    rdfs:subClassOf noid:Transform .

noid:mapAxis a owl:Class ;
    rdfs:label "Map Axis Transform" ;
    rdfs:comment "Axis permutations as a mapping of axis names" ;
    rdfs:subClassOf noid:Transform .

noid:translation a owl:Class ;
    rdfs:label "Translation Transform" ;
    rdfs:comment "Shifts coordinates by a constant vector" ;
    rdfs:subClassOf noid:Transform .

noid:scale a owl:Class ;
    rdfs:label "Scale Transform" ;
    rdfs:comment "Scales coordinates along each axis" ;
    rdfs:subClassOf noid:Transform .

noid:homogeneous a owl:Class ;
    rdfs:label "Homogeneous Transform" ;
    rdfs:comment "Matrix-based transformation using homogeneous coordinates (supports both affine and projective)" ;
    rdfs:subClassOf noid:Transform .

noid:rotation a owl:Class ;
    rdfs:label "Rotation Transform" ;
    rdfs:comment "Matrix-based rotation transformation" ;
    rdfs:subClassOf noid:Transform .


noid:displacements a owl:Class ;
    rdfs:label "Displacements Transform" ;
    rdfs:comment "Vector field-based transformation using displacement maps" ;
    rdfs:subClassOf noid:Transform .

noid:coordinates a owl:Class ;
    rdfs:label "Coordinates Transform" ;
    rdfs:comment "Explicit coordinate mapping transformation" ;
    rdfs:subClassOf noid:Transform .

# Parameter properties

noid:translation a owl:DatatypeProperty ;
    rdfs:label "translation" ;
    rdfs:comment "Translation vector as array of numeric values" ;
    rdfs:domain noid:translation .

noid:scale a owl:DatatypeProperty ;
    rdfs:label "scale" ;
    rdfs:comment "Scale factors as array of numeric values" ;
    rdfs:domain noid:scale .

noid:matrix a owl:DatatypeProperty ;
    rdfs:label "matrix" ;
    rdfs:comment "Transformation matrix as array of arrays" ;
    rdfs:domain noid:homogeneous, noid:rotation .

noid:mapAxis a owl:DatatypeProperty ;
    rdfs:label "mapAxis" ;
    rdfs:comment "Mapping between input and output axes" ;
    rdfs:domain noid:mapAxis .


noid:displacements a owl:DatatypeProperty ;
    rdfs:label "displacements" ;
    rdfs:comment "Reference to displacement field data" ;
    rdfs:domain noid:displacements .

noid:coordinates a owl:DatatypeProperty ;
    rdfs:label "coordinates" ;
    rdfs:comment "Explicit coordinate value mappings" ;
    rdfs:domain noid:coordinates .