{
    "$defs": {
        "CoordinateLookupTable": {
            "additionalProperties": false,
            "description": "Coordinate lookup table transform",
            "properties": {
                "lookup_table": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/SamplerConfig"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Coordinate lookup table configuration"
                },
                "path": {
                    "description": "Path to coordinate lookup table data file",
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "title": "CoordinateLookupTable",
            "type": "object"
        },
        "CoordinateSpaceSpec": {
            "additionalProperties": false,
            "description": "Coordinate space specification that can be a string reference, dimension array, or inline CoordinateSystem.",
            "title": "CoordinateSpaceSpec",
            "type": "object"
        },
        "CoordinateSystem": {
            "additionalProperties": false,
            "description": "Collection of dimensions that together define a coordinate space for positioning data elements.",
            "properties": {
                "description": {
                    "description": "Optional description of the coordinate system",
                    "pattern": "^.+$",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "dimensions": {
                    "description": "List of dimension specifications",
                    "items": {
                        "$ref": "#/$defs/DimensionSpec"
                    },
                    "minItems": 1,
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier for the coordinate system",
                    "pattern": "^.+$",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "dimensions"
            ],
            "title": "CoordinateSystem",
            "type": "object"
        },
        "CoordinateTransform": {
            "additionalProperties": false,
            "description": "Mathematical mapping between input and output coordinate spaces with transform definition.",
            "properties": {
                "description": {
                    "description": "Optional description of the coordinate transform",
                    "pattern": "^.+$",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "id": {
                    "description": "Unique identifier for the coordinate transform",
                    "pattern": "^.+$",
                    "type": "string"
                },
                "input": {
                    "$ref": "#/$defs/CoordinateSpaceSpec",
                    "description": "Input coordinate space specification"
                },
                "output": {
                    "$ref": "#/$defs/CoordinateSpaceSpec",
                    "description": "Output coordinate space specification"
                },
                "transform": {
                    "$ref": "#/$defs/Transform",
                    "description": "Transform definition from noid_transform schema"
                }
            },
            "required": [
                "id",
                "input",
                "output",
                "transform"
            ],
            "title": "CoordinateTransform",
            "type": "object"
        },
        "Dimension": {
            "additionalProperties": false,
            "description": "A single axis within a coordinate space with its measurement unit and classification.",
            "if": {
                "properties": {
                    "type": {
                        "const": "index"
                    }
                },
                "required": [
                    "type"
                ]
            },
            "properties": {
                "id": {
                    "description": "Unique identifier for the dimension",
                    "pattern": "^.+$",
                    "type": "string"
                },
                "type": {
                    "$ref": "#/$defs/DimensionType",
                    "description": "Dimension type classification"
                },
                "unit": {
                    "$ref": "#/$defs/UnitTerm",
                    "description": "Unit of measurement from controlled vocabulary"
                }
            },
            "required": [
                "id",
                "unit",
                "type"
            ],
            "then": {
                "properties": {
                    "unit": {
                        "const": "index"
                    }
                },
                "required": [
                    "unit"
                ]
            },
            "title": "Dimension",
            "type": "object"
        },
        "DimensionArray": {
            "additionalProperties": false,
            "description": "Array of dimension specifications",
            "properties": {
                "dimensions": {
                    "items": {
                        "$ref": "#/$defs/DimensionSpec"
                    },
                    "minItems": 1,
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "title": "DimensionArray",
            "type": "object"
        },
        "DimensionSpec": {
            "additionalProperties": false,
            "description": "Dimension specification that can be either a string reference or inline Dimension object.",
            "title": "DimensionSpec",
            "type": "object"
        },
        "DimensionType": {
            "description": "Classification of dimension types",
            "enum": [
                "space",
                "time",
                "other",
                "index"
            ],
            "title": "DimensionType",
            "type": "string"
        },
        "DisplacementLookupTable": {
            "additionalProperties": false,
            "description": "Displacement field lookup table transform",
            "properties": {
                "displacements": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/SamplerConfig"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Displacement field configuration"
                },
                "path": {
                    "description": "Path to displacement field data file",
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "title": "DisplacementLookupTable",
            "type": "object"
        },
        "ExtrapolationMethod": {
            "description": "",
            "enum": [
                "nearest",
                "zero",
                "constant",
                "reflect",
                "wrap"
            ],
            "title": "ExtrapolationMethod",
            "type": "string"
        },
        "Homogeneous": {
            "additionalProperties": false,
            "description": "Homogeneous transformation matrix (affine/projective)",
            "properties": {
                "homogeneous": {
                    "description": "Homogeneous transformation matrix as 2D array",
                    "items": {
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "homogeneous"
            ],
            "title": "Homogeneous",
            "type": "object"
        },
        "Identity": {
            "additionalProperties": false,
            "description": "Identity transform",
            "title": "Identity",
            "type": "object"
        },
        "InterpolationMethod": {
            "description": "",
            "enum": [
                "linear",
                "nearest",
                "cubic"
            ],
            "title": "InterpolationMethod",
            "type": "string"
        },
        "MapAxis": {
            "additionalProperties": false,
            "description": "Axis permutation transform",
            "properties": {
                "map_axis": {
                    "description": "Permutation vector of 0-based input dimension indices. Array length equals number of output dimensions. Each value specifies which input dimension maps to the corresponding output dimension.",
                    "items": {
                        "minimum": 0,
                        "type": "integer"
                    },
                    "type": "array"
                }
            },
            "required": [
                "map_axis"
            ],
            "title": "MapAxis",
            "type": "object"
        },
        "SamplerConfig": {
            "additionalProperties": false,
            "description": "Configuration for sampling transforms (displacements and lookup tables)",
            "properties": {
                "extrapolation": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ExtrapolationMethod"
                        },
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Extrapolation method",
                    "type": "string"
                },
                "interpolation": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/InterpolationMethod"
                        },
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "description": "Interpolation method",
                    "type": "string"
                }
            },
            "title": "SamplerConfig",
            "type": "object"
        },
        "Scale": {
            "additionalProperties": false,
            "description": "Scale transform",
            "properties": {
                "scale": {
                    "description": "Scale factors as array of numbers",
                    "items": {
                        "minimum": 1,
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "scale"
            ],
            "title": "Scale",
            "type": "object"
        },
        "Translation": {
            "additionalProperties": false,
            "description": "Translation transform",
            "properties": {
                "translation": {
                    "description": "Translation vector as array of numbers",
                    "items": {
                        "minimum": 1,
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "translation"
            ],
            "title": "Translation",
            "type": "object"
        },
        "UnitTerm": {
            "description": "Controlled vocabulary for measurement units",
            "enum": [
                "index",
                "arbitrary",
                "meter",
                "meters",
                "millimeter",
                "millimeters",
                "micrometer",
                "micrometers",
                "nanometer",
                "nanometers",
                "pixel",
                "pixels",
                "second",
                "seconds",
                "millisecond",
                "milliseconds",
                "minute",
                "minutes",
                "hour",
                "hours",
                "radian",
                "radians",
                "degree",
                "degrees",
                "wavelength",
                "intensity"
            ],
            "title": "UnitTerm",
            "type": "string"
        }
    },
    "$id": "https://github.com/nclack/noid/schemas/v0/space.linkml.yaml",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "title": "space",
    "type": "object",
    "version": "0.1.0"
}
