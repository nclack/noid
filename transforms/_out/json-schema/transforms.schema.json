{
    "$defs": {
        "CoordinateLookupTable": {
            "additionalProperties": false,
            "description": "Coordinate lookup table transform",
            "properties": {
                "lookup_table": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "$ref": "#/$defs/LookupTableConfig"
                        }
                    ],
                    "description": "Coordinate lookup table configuration"
                }
            },
            "required": [
                "lookup_table"
            ],
            "title": "CoordinateLookupTable",
            "type": "object"
        },
        "DisplacementConfig": {
            "additionalProperties": false,
            "description": "Configuration for displacement field",
            "properties": {
                "extrapolation": {
                    "$ref": "#/$defs/ExtrapolationMethod",
                    "description": "Extrapolation method"
                },
                "interpolation": {
                    "$ref": "#/$defs/InterpolationMethod",
                    "description": "Interpolation method"
                },
                "path": {
                    "description": "Path to displacement field",
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "title": "DisplacementConfig",
            "type": "object"
        },
        "DisplacementLookupTable": {
            "additionalProperties": false,
            "description": "Displacement field lookup table transform",
            "properties": {
                "displacements": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "$ref": "#/$defs/DisplacementConfig"
                        }
                    ],
                    "description": "Displacement field configuration"
                }
            },
            "required": [
                "displacements"
            ],
            "title": "DisplacementLookupTable",
            "type": "object"
        },
        "ExtrapolationMethod": {
            "description": "",
            "enum": [
                "nearest",
                "zero",
                "constant"
            ],
            "title": "ExtrapolationMethod",
            "type": "string"
        },
        "Homogeneous": {
            "additionalProperties": false,
            "description": "Homogeneous transformation matrix (affine/projective)",
            "properties": {
                "homogeneous": {
                    "description": "Homogeneous transformation matrix as 2D array",
                    "items": {
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "homogeneous"
            ],
            "title": "Homogeneous",
            "type": "object"
        },
        "Identity": {
            "additionalProperties": false,
            "description": "Identity transform",
            "title": "Identity",
            "type": "object"
        },
        "InterpolationMethod": {
            "description": "",
            "enum": [
                "linear",
                "nearest",
                "cubic"
            ],
            "title": "InterpolationMethod",
            "type": "string"
        },
        "LookupTableConfig": {
            "additionalProperties": false,
            "description": "Configuration for coordinate lookup table",
            "properties": {
                "extrapolation": {
                    "$ref": "#/$defs/ExtrapolationMethod",
                    "description": "Extrapolation method"
                },
                "interpolation": {
                    "$ref": "#/$defs/InterpolationMethod",
                    "description": "Interpolation method"
                },
                "path": {
                    "description": "Path to coordinate lookup table",
                    "type": "string"
                }
            },
            "required": [
                "path"
            ],
            "title": "LookupTableConfig",
            "type": "object"
        },
        "MapAxis": {
            "additionalProperties": false,
            "description": "Axis permutation transform",
            "properties": {
                "mapAxis": {
                    "description": "Permutation vector of 0-based input dimension indices. Array length equals number of output dimensions. Each value specifies which input dimension maps to the corresponding output dimension.",
                    "items": {
                        "minimum": 0,
                        "type": "integer"
                    },
                    "type": "array"
                }
            },
            "required": [
                "mapAxis"
            ],
            "title": "MapAxis",
            "type": "object"
        },
        "Scale": {
            "additionalProperties": false,
            "description": "Scale transform",
            "properties": {
                "scale": {
                    "description": "Scale factors as array of numbers",
                    "items": {
                        "minimum": 1,
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "scale"
            ],
            "title": "Scale",
            "type": "object"
        },
        "Translation": {
            "additionalProperties": false,
            "description": "Translation transform",
            "properties": {
                "translation": {
                    "description": "Translation vector as array of numbers",
                    "items": {
                        "minimum": 1,
                        "type": "number"
                    },
                    "type": "array"
                }
            },
            "required": [
                "translation"
            ],
            "title": "Translation",
            "type": "object"
        }
    },
    "$id": "https://github.com/nclack/noid/schemas/transforms/transforms.linkml",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "title": "transforms",
    "type": "object",
    "version": "0.1.0"
}
