{
  "@context": {
    "@language": "en",
    "@vocab": "https://schema.org/",
    "cr": "https://mlcommons.org/croissant/",
    "dct": "http://purl.org/dc/terms/",
    "sc": "https://schema.org/"
  },
  "@type": "sc:Dataset",
  "name": "noid-transform-examples",
  "description": "Example coordinate transformations for multidimensional arrays",
  "dct:conformsTo": "http://mlcommons.org/croissant/1.0",
  "cr:citeAs": "@misc{noid-transforms, title={NOID Transform Examples}, author={Nathan Clack}, year={2025}}",
  "license": "https://creativecommons.org/licenses/by/4.0/",
  "url": "https://github.com/nclack/noid/examples/transforms.json",
  "version": "1.0.0",
  "datePublished": "2025-01-13",
  "distribution": [
    {
      "@type": "cr:FileObject",
      "name": "transforms_table.json",
      "description": "Table containing transform examples with parameters",
      "contentUrl": "transforms_table.json",
      "encodingFormat": "application/json",
      "sha256": "placeholder"
    }
  ],
  "cr:recordSet": [
    {
      "@type": "cr:RecordSet",
      "name": "transforms",
      "description": "Transform examples with their parameters",
      "cr:field": [
        {
          "@type": "cr:Field",
          "name": "id",
          "description": "Unique identifier for the transform",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "id"
            }
          }
        },
        {
          "@type": "cr:Field", 
          "name": "type",
          "description": "Transform type from the NOID vocabulary",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "type"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "label", 
          "description": "Human readable description of the transform",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "label"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "translation",
          "description": "Translation vector for translation transforms",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "translation"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "scale",
          "description": "Scale factors for scale transforms", 
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "scale"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "matrix",
          "description": "Transformation matrix for matrix-based transforms",
          "cr:dataType": "sc:Text", 
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "matrix"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "mapAxis",
          "description": "Axis mapping for mapAxis transforms",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "mapAxis"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "sequence",
          "description": "Transform sequence for sequence transforms",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "sequence"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "displacements",
          "description": "Displacement field reference for displacement transforms",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "displacements"
            }
          }
        },
        {
          "@type": "cr:Field",
          "name": "coordinates",
          "description": "Coordinate mapping for coordinate transforms",
          "cr:dataType": "sc:Text",
          "cr:source": {
            "cr:fileObject": {
              "name": "transforms_table.json"
            },
            "cr:extract": {
              "cr:column": "coordinates"
            }
          }
        }
      ]
    }
  ]
}